@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">


     <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create Table</h4>
                  <form class="forms-sample" method="POST">

                    <div class="form-group">
                      <label asp-for="Name" ></label>
                      <input asp-for="Name" class="form-control" maxlength="1000"  placeholder="Name">
                      <span style="color: red;" asp-validation-for="Name"></span>
                    </div>
                    
                    <div class="form-group">
                      <label asp-for="Desc"></label>
                      <input asp-for="Desc" class="form-control" style="padding: 10px 0px 70px 10px;"  placeholder="Description">
                      <span style="color: red;" asp-validation-for="Desc"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button asp-controller="category" asp-action="index" class="btn btn-success"> Go Back</button>
                  </form>
                </div>
              </div>
            </div>


</div>

