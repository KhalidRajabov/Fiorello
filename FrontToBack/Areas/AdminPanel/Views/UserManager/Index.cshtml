@model List<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="row">

      <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Name</th>
                          <th>Username</th>
                          <th>Email</th>
                          <th>Status</th>
                          <th>Role</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                       {
                            count++;
                           <tr>
                          <td>@count</td>
                          <td>@item.Name</td>
                          <td>@item.Username</td>
                          <td>@item.Email</td>
                          @if (item.IsActivated)
                                    {
                                        <td style="color:lawngreen">Active</td>
                                    }
                                    else
                                    {
                                        <td style="color: red">Deactive</td>
                                    }
                                    <td>@item.Role</td>
                          <td>
                              @if (item.IsActivated)
                                        {
                                            <a class="btn btn-danger"  asp-action="deactivate" asp-route-id="@item.Id">Deactivate</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-success"  asp-action="activate" asp-route-id="@item.Id">Activate</a>
                                        }
                                        <a class="btn btn-success" asp-action="detail" asp-route-id="@item.Id"><i class="mdi mdi-information-outline"></i></a>
                              <a class="btn btn-danger " asp-action="delete" asp-route-id="@item.Id"><i class="mdi mdi-delete-forever"></i></a>

                          </td>
                        </tr>
                       }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

</div>

