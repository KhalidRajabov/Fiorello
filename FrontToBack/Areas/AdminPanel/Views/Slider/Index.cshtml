@model List<Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="row">

      <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  @if (Model.Count()<6)
                {
                    <p class="card-description">
                    <a class="btn btn-info fs-5"  asp-action="create">Add Image</a>
                    </p>
                }
                else
                {
                    <div class="row bg-danger text-white align-items-center"><p style="padding:10px; font-size: 120%">You have the maximum amount of images for slider</p></div>
                }
                <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Image</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                       {
                            count++;
                           <tr>
                          <td>@count</td>
                          <td> <img style="border-radius:0; width:200px; height:80px" src="~/img/@item.ImageUrl"> </td>
                          <td>
                              <a class="btn btn-success fs-5" asp-action="detail" asp-route-id="@item.Id"><i class="mdi mdi-information-outline"></i></a>
                              <a class="btn btn-danger fs-5" asp-action="delete" asp-route-id="@item.Id"><i class="mdi mdi-delete-forever"></i></a>

                          </td>
                        </tr>
                       }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

</div>

