@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    ViewData["Title"] = "Index";
 
}

<div class="row">

      <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">

                    <a class="btn btn-info fs-5"  asp-action="create">Create Role</a>
                            

                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Name</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (IdentityRole item in Model)
                       {
                            <tr>
                          <td>@item.Name</td>
                          <td>
                                            <a class="btn btn-warning"  asp-action="update" asp-route-id="@item.Id">Edit</a>          
                                        <a class="btn btn-success" asp-action="detail" asp-route-id="@item.Id"><i class="mdi mdi-information-outline"></i></a>
                              <a class="btn btn-danger " asp-action="deleterole" asp-route-id="@item.Id"><i class="mdi mdi-delete-forever"></i></a>

                          </td>
                        </tr>
                       }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

</div>

