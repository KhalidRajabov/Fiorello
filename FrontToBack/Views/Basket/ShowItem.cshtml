@model List<BasketVM>
@{
    ViewData["Title"] = "ShowItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="row">
      @if (Model.Count()>0)
        {
              <table class="table">
  <thead>
    <tr>
      <th scope="col">Count</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">TotalPrice</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
                {
                    count++;
                    <tr>
                       <th scope="row">@count</th>
                       <td><img width="50" src="~/img/@item.ImageUrl" /></td>
                       <td>@item.Name</td>
                       <td>@item.Price</td>
                       <td>$@(item.Price* item.ProductCount)</td>
                       <td>
                           <a id="minusitem" data-id="@item.Id" class="btn btn-success">-</a>

                          <span>  
                              @item.ProductCount

                          </span>  

                           <a data-id="@item.Id" id="plusitem" class="btn btn-warning">+</a>
                       </td>
                       <td><a asp-controller="basket" asp-action="removeitem" asp-route-Id="@item.Id" class="btn btn-danger">X</a></td>
                    </tr>
                }

  </tbody>
            </table>
        }

        else
        {
            <a asp-controller="home" asp-action="index">Home</a>
        }
    </div>
</div>