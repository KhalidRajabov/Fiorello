@model UserInfoVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container ">

    <div class="card col-12" style="align-self: center">
  <img class="card-img-top" style="width: 20%; align-self: center" src="~/img/@Model.ImageURL" alt="">
  <div class="card-body">
    <h3 class="card-title">Name: @Model.Fullname</h3>
    <h5 class="card-title">Username: @Model.Username</h5>
  </div>
  

  <ul class="list-group list-group-flush ">
    <li class="list-group-item"> <h5>Contact:</h5></li>
    <li class="list-group-item">Email: @Model.Email</li>
    <li class="list-group-item">Phone number: @(Model.Phone==null?"Not entered":$"{Model.Phone}")</li>
    @if (Model.IsActivated)
                {
                <li class="list-group-item">Activated: <span style="color: lawngreen">The account is activated</span></li>
            }
            else
            {
                <li class="list-group-item">Activated: <span style="color: darkred">The account is not activated</span></li>
            }
        </ul>

  
    <ul class="list-group list-group-flush">
    <li class="list-group-item"><h5>About:</h5></li>
    <li class="list-group-item">@Model.About</li>
    
  </ul>
  

  <div class="card-body w-100">
    <a asp-action="edit" class="btn btn-warning card-link text-light">Edit Account</a>
    <a asp-action="index" asp-controller="home" class="card-link btn btn-dark text-light">Go back</a>
  </div>
  
</div>

</div>

